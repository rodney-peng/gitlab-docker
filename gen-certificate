if [[ "$1" -gt "0" ]]; then
days=$1
else
# for 5 years
days=$((365*5))
fi
echo days=$days

name=192.168.32.11

openssl req -x509 -newkey rsa:4096 -nodes -sha256 -days $days \
     -config openssl.cnf -batch -keyout $name.key -out $name.crt

# show the certificate
openssl x509 -in $name.crt -text -subject
